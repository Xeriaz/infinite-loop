<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ "My project" }}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        {% endblock %}
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico')}}">
        {% block canonical_meta %}{% endblock %}
    </head>
    <body>
        <header>
            <header class="header">
                <img class="iL-logoImg" src="{{ asset('images/logo.png') }}" alt="logo"/>
                <form action="#" class="search">
                    <input type="text" class="search__input" placeholder="Search Challenges">
                    <button class="search__button">

                        <svg class="search__icon">
                            <use xlink:href="{{ asset('images/sprite.svg#icon-magnifying-glass') }}"></use>
                        </svg>
                    </button>
                </form>
                <nav class="user-nav">
                    {#<div class="user-nav__icon-box">#}
                        {#<svg class="user-nav__icon">#}
                            {#<use xlink:href="{{ asset('images/sprite.svg#icon-bookmark') }}"></use>#}
                        {#</svg>#}
                        {#<span class="user-nav__notification">7</span>#}
                    {#</div>#}
                    {#<div class="user-nav__icon-box">#}
                        {#<svg class="user-nav__icon">#}
                            {#<use xlink:href="{{ asset('images/sprite.svg#icon-chat') }}"></use>#}
                        {#</svg>#}
                        {#<span class="user-nav__notification">13</span>#}
                    {#</div>#}
                    <div class="user-nav__user">
                        <img src="{{ asset('images/user.jpg') }}" alt="user photo" class="user-nav__user-photo">
                        <span class="user-nav__user-name">Viktoras</span>
                    </div>
                    <div class="user-nav__login">
                        {% if is_granted('ROLE_USER') %}
                                <a class="btn btn-outline-success" href="{{ path('fos_user_security_logout') }}">Logout</a>
                        {% else %}
                                <a class="btn btn-outline-success" href="{{ path('fos_user_registration_register') }}">Sign Up</a>
                                <a class="btn btn-outline-success" href="{{ path('fos_user_security_login') }}">Login</a>
                        {% endif %}

                    </div>

                </nav>
            </header>








            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" href="/">
                    <img class="iL-logoImg" src="{{ 'images/logo.png' }}" alt="logo"/>
                    Infinite loop
                <div class="collapse navbar-collapse" id="navbarColor01">
                    {#<ul class="navbar-nav mr-auto">#}
                        {#<li class="nav-item active">#}
                            {#<a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>#}
                        {#</li>#}
                        {#<li class="nav-item">#}
                            {#<a class="nav-link" href="#">Features</a>#}
                        {#</li>#}
                    {#</ul>#}
                    <ul class="navbar-nav pull-right ml-auto">
                        {% if is_granted('ROLE_USER') %}
                            <li class="nav-item">
                                <a class="btn btn-outline-success" href="{{ path('fos_user_security_logout') }}">Logout</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="btn btn-outline-success" href="{{ path('fos_user_registration_register') }}">Sign Up</a>
                            </li>&nbsp;
                            <li class="nav-item">
                                <a class="btn btn-outline-success" href="{{ path('fos_user_security_login') }}">Login</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        </header>

        <div class="content">
            <div class="contentLeft">

            </div>
            <div class="contentRight">

            </div>

        </div>

        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('build/js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
