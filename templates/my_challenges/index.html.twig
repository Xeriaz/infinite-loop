{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block content %}
    <div class="myChallenge-wrapper">
        <div class="cards-wrapper">
            {% for challenge in challenges %}
                <div class="card customCard">
                    <div class="card-body body-bg d-flex align-items-center">
                        <div class="card-body__textBlock">
                            <h4 class="card-title z-index--10">{{ challenge.title }}</h4>
                            {% for challengeGroup in challenge.challengeGroup %}
                                <span class="label label-danger" style="color:#ff0000;font-weight: bold">
                                    {{ challengeGroup.groupName }}
                                </span>
                            {% endfor %}
                            <p class="card-text z-index--10">{{ challenge.description }}</p>
                        </div>
                        <div class="card-body__dateBlock text-right">
                            {% if challenge.isPublic %}
                                <h5 style="color:#ff0000;font-weight: bold">PUBLIC CHALLENGE</h5>
                            {% endif %}
                            <div class="z-index--10"><span class="mr-2">Start:</span>{{ challenge.startDate|date('Y-m-d') }}</div>
                            <div class="z-index--10"><span class="mr-2">End:</span>{{ challenge.endDate|date('Y-m-d') }}</div>
                        </div>
                    </div>

                    {% set completedMilestones = 0 %}
                    {% set milestonesCount = 0 %}
                    <ul class="list-group list-group-flush">
                        {% for milestone in challenge.milestones %}
                            {% if milestone.status and not milestone.isDeleted%}
                                {% set completedMilestones = completedMilestones + 1 %}
                            {% endif %}
                            {% if not milestone.isDeleted %}
                                {% set milestonesCount = milestonesCount + 1 %}

                            <li class="list-group-item d-flex align-items-center">
                                <h5 class="card-subtitle customCard-subtitle">{{ milestone.title }}</h5>
                                <div class="milestone-statusBlock">
                                    <div class="date-subtitle">
                                        {% if milestone.isFailed %}
                                            <span class="d-block">Failed on: <br>
                                        {% else %}
                                            <span class="d-block">Completed on: <br>
                                        {% endif %}
                                            {% if milestone.completedOn == null %}
                                                TBD
                                            {% else %}
                                                {{ milestone.completedOn|date('Y-m-d') }}
                                            {% endif %}
                                        </span>
                                    </div>
                                    {% if milestone.isFailed %}
                                        <a href="{{ path('remove_milestone', {'id': milestone.id}) }}">Remove</a>
                                    {% elseif not milestone.status %}
                                        <a href="{{ path('complete_milestone', {'id': milestone.id}) }}">Complete</a>
                                        <a href="{{ path('failed_milestone', {'id': milestone.id}) }}">Failed</a>
                                        <a href="{{ path('remove_milestone', {'id': milestone.id}) }}">Remove</a>
                                    {% endif %}
                                    {#<select class="milestone-statusSelect" name="milestone-status" id="milestone-status">#}
                                        {#<option value="ongoing">On Progress</option>#}
                                        {#<option value="done"> Done!!</option>#}
                                        {#<option value="failed">Failed</option>#}
                                    {#</select>#}
                                </div>
                            </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                    <div class="card-footer">
                        <div class="card-footer__control">
                            {% if not challenge.isCompleted %}
                                <a href="{{ path('delete_challenge', {'id': challenge.id}) }}" class="btn-inline">Remove</a>
                                <a href="{{ path('edit_challenge', {'id': challenge.id }) }}" class="btn-inline">Edit</a>
                                <a href="{{ path('milestone', {'id': challenge.id}) }}" class="btn-inline">Add Milestone</a>
                                <a href="{{ path('mark_challenge_completed', {'id': challenge.id}) }}"
                                   class="btn-inline">Challenge completed</a>
                                {#<a href="#" class="btn-inline">Close</a>#}
                            {% else %}
                                <h5>Challenge is completed on: {{ challenge.completedOn|date('Y-m-d') }}</h5>
                            {% endif %}
                        </div>
                        <div class="card-footer__statusBlock">
                            <span>Milestone progress: {{ completedMilestones }} / {{ milestonesCount }} </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}