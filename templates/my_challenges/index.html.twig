{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block content %}
    <div class="myChallenge-wrapper">
        <div class="cards-wrapper">
            {% for challenge in challenges %}
                <div class="card customCard">
                    <div class="card-body body-bg d-flex align-items-top">
                        <div class="card-body__textBlock">

                            <h4 class="card-title z-index--10">{{ challenge.title }}</h4>
                            <p class="card-text z-index--10">{{ challenge.description }}</p>

                            {% for challengeGroup in challenge.challengeGroup %}
                                <span class="card-tags"> {{ challengeGroup.groupName }} </span>
                            {% endfor %}
                            {% if challenge.isPublic %}
                                <span class="card-tags">Public Challenge</span>
                                {% else %}
                                    <span class="card-tags">Private Challenge</span>
                            {% endif %}
                        </div>
                        <div class="card-body__dateBlock text-right">
                            <div class="z-index--10"><span class="mr-2">Start:</span>{{ challenge.startDate|date('Y-m-d') }}</div>
                            <div class="z-index--10"><span class="mr-2">End:</span>{{ challenge.endDate|date('Y-m-d') }}</div>
                        </div>
                    </div>

                    {% set completedMilestones = 0 %}
                    {% set milestonesCount = 0 %}
                    <ul class="list-group list-group-flush">
                        {% for milestone in challenge.milestones %}
                            {% if milestone.status and not milestone.isDeleted%}
                                {% set completedMilestones = completedMilestones + 1 %}
                            {% endif %}
                            {% if not milestone.isDeleted %}
                                {% set milestonesCount = milestonesCount + 1 %}

                            <li class="list-group-item d-flex align-items-center">
                                <h5 class="card-subtitle customCard-subtitle">{{ milestone.title }}</h5>
                                <div class="milestone-statusBlock">
                                    {% if milestone.completedOn != null %}

                                        <div class="date-subtitle">
                                            {% if milestone.isFailed %}
                                                <span class="d-block">Failed on: <br>
                                            {% else %}
                                                <span class="d-block">Completed on: <br>
                                            {% endif %}
                                                {#{% if milestone.completedOn == null %}#}
                                                    {#TBD#}
                                                {#{% else %}#}
                                                    {{ milestone.completedOn|date('Y-m-d') }}
                                                {#{% endif %}#}
                                            </span>
                                        </div>
                                    {% endif %}
                                    {#<div>#}
                                        {% if milestone.isFailed %}
                                            {#<a href="{{ path('remove_milestone', {'id': milestone.id}) }}">Remove</a>#}
                                        {% elseif not milestone.status %}
                                            <a class="milestone-statusLink" href="{{ path('complete_milestone', {'id': milestone.id}) }}">
                                                <svg class="milestone-statusIcon">
                                                    <use xlink:href="{{ asset('images/sprite.svg#icon-checkmark') }}"></use>
                                                </svg>
                                                <span class="milestone-statusLabel">Done</span>
                                            </a>
                                            <a class="milestone-statusLink" href="{{ path('failed_milestone', {'id': milestone.id}) }}">
                                                <svg class="milestone-statusIcon">
                                                    <use xlink:href="{{ asset('images/sprite.svg#icon-cross') }}"></use>
                                                </svg>
                                                <span class="milestone-statusLabel">Give up</span>
                                            </a>
                                            <a class="milestone-statusLink" href="{{ path('remove_milestone', {'id': milestone.id}) }}">
                                                <svg class="milestone-statusIcon">
                                                    <use xlink:href="{{ asset('images/sprite.svg#icon-bin') }}"></use>
                                                    <span class="milestone-statusLabel">Remove</span>
                                                </svg>
                                            </a>
                                        {% endif %}
                                    {#</div>#}
                                </div>
                            </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                    <div class="card-footer">
                        <div class="card-footer__control">
                            {% if not challenge.isCompleted %}

                                    Challenge:

                                    <a class="milestone-statusLink" href="{{ path('delete_challenge', {'id': challenge.id}) }}" >
                                        <svg class="milestone-statusIcon">
                                            <use xlink:href="{{ asset('images/sprite.svg#icon-cross') }}"></use>
                                        </svg>
                                    </a>
                                    <a class="milestone-statusLink" href="{{ path('edit_challenge', {'id': challenge.id }) }}" >
                                        <svg class="milestone-statusIcon">
                                            <use xlink:href="{{ asset('images/sprite.svg#icon-pencil') }}"></use>
                                        </svg>
                                    </a>

                                    <a class="milestone-statusLink" href="{{ path('mark_challenge_completed', {'id': challenge.id}) }}" >
                                        <svg class="milestone-statusIcon">
                                            <use xlink:href="{{ asset('images/sprite.svg#icon-checkmark') }}"></use>
                                        </svg>
                                    </a>
                                    <span class="ml-5">
                                        Milestone:
                                        <a class="milestone-statusLink" href="{{ path('milestone', {'id': challenge.id}) }}" c>
                                            <svg class="milestone-statusIcon">
                                                 <use xlink:href="{{ asset('images/sprite.svg#icon-plus') }}"></use>
                                             </svg>
                                        </a>
                                    </span>
                            {% else %}
                                <h5>Challenge is completed on: {{ challenge.completedOn|date('Y-m-d') }}</h5>
                            {% endif %}
                        </div>
                        <div class="card-footer__statusBlock">
                            <span>Milestone progress: {{ completedMilestones }} / {{ milestonesCount }} </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}