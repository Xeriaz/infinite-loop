<div class="formBody">
    <div class="formRow">
        <div class="formLabel">
            {{ form_label(form.Title) }}
        </div>
        <div class="formControl">
            {{ form_widget(form.Title, { 'attr': {'class': 'formInput','autofocus': 'true','placeholder':'Give a title for your challenge' } }) }}
            {{ form_errors(form.Title) }}
        </div>
    </div>

    <div class="formRow mb-3">
        <div class="formLabel">
            {{ form_label(form.Description) }}
        </div>
        <div class="formControl">
            {{ form_widget(form.Description, { 'attr': {'class': 'formInput','placeholder':'Short description (*optional)' } }) }}
            {{ form_errors(form.Description) }}
        </div>
    </div>

    <div class="formRow">
        <div class="formLabel">
            {{ form_label(form.Start_date) }}
        </div>
        <div class="formControl">
            {{ form_widget(form.Start_date, { 'attr': {'class': 'formInput' } }) }}
            {{ form_errors(form.Start_date) }}
        </div>
    </div>

    <div class="formRow mb-3">
        <div class="formLabel">
            {{ form_label(form.End_date) }}
        </div>
        <div class="formControl">
            {{ form_widget(form.End_date, { 'attr': {'class': 'formInput' } }) }}
            {{ form_errors(form.End_date) }}
        </div>
    </div>

    <div class="formRow">
        <div class="formLabel">
            {{ form_label(form.challengeGroup) }}
        </div>
        <div class="formControl">
            {{ form_widget(form.challengeGroup, { 'attr': {'class': 'formInput' } }) }}
            {{ form_errors(form.challengeGroup) }}
        </div>
    </div>
    {% if app.request.get('id') == null %}
        <div class="formRow">
            <div class="formLabel">
                {{ form_label(form.public) }}
            </div>
            <div class="formControl">
                {{ form_widget(form.public, { 'attr': {'class': 'formInput' } }) }}
                {{ form_errors(form.public) }}
            </div>
        </div>

        {#<div class="formRow">#}
            {#<div class="formLabel">#}
                {#{{ form_label(form.addProof) }}#}
            {#</div>#}
            {#<div class="formControl">#}
                {#{{ form_widget(form.addProof, { 'attr': {'class': 'formInput' } }) }}#}
                {#{{ form_errors(form.addProof) }}#}
            {#</div>#}
        {#</div>#}
    {% endif %}


        <div class="formRow">
            <div class="formLabel" style="border: none; font-size: 1.2rem;color: #8b0000;">
                Error
            </div>
            <div class="formControl" style="color: #8b0000;">
                {% for error in form.vars.errors %}
                    {{ error.message }} <br>
                {% endfor %}
            </div>
        </div>
</div>