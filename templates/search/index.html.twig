                            {% endfor %}

                        </div>
                    </div>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-center">
                            <h5 class="card-subtitle customCard-subtitle">Start date
                                - {{ publicChallenge.startDate|date('Y-m-d') }}</h5>
                        </li>
                        <li class="list-group-item text-center">
