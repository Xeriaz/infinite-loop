{% extends 'base.html.twig' %}

{% block title %}Homepage - {{ parent() }}{% endblock %}

{% block content %}
    <div class="container">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Public status</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Owner</th>
            </tr>
            </thead>
            <tbody>
            {% for challenge in challenges %}
                <tr>
                    <td>{{ challenge.id }}</td>
                    <td>{{ challenge.title }}</td>
                    <td>{{ challenge.description }}</td>
                    <td>{{ challenge.isPublic }}</td>
                    <td>{{ challenge.startDate|date('Y-m-d') }}</td>
                    <td>{{ challenge.endDate|date('Y-m-d') }}</td>
                    <td>{{ challenge.owner }}</td>
                    <td><a href="{{ path('join_in_challenge', {'id': challenge.id }) }}">Join In</a></td>
                    
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
